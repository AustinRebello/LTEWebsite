<section class="h-100 gradient-form">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6" style="background-color:#000000;">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <%= image_tag("LTE_Logo_Black.png", style:"height:200px;width:auto;", :alt=> "LTE Logo") %>
                  <h4 class="mt-1 mb-5 pb-1 text-white">LTElections Administration Sign-In</h4>
                </div>

                
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                    <%= f.label :email, class:"text-white" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email Address" %>
                  </div>

                  <div class="field">
                    <%= f.label :password, class:"text-white" %><br />
                    <%= f.password_field :password, autocomplete: "current-password",  class:"form-control", placeholder:"Password" %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, class:"text-white" %>
                    </div>
                  <% end %>

                  <div class="actions">
                    <%= f.submit "Log in", class:"btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
                
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2" style="background-image: linear-gradient(to right bottom, #BB0000, #0000BB);">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">This is currently for LTE Developers and Admins only!</h4>
                <p class="small mb-0">Our developers are currently using the login feature for the core structure of editing, adding and removing races on the website.
                base user login functionality once the site becomes more polished! If you are an LTE Admin interested in helping SwiftlySalted with the website, please do not hesitate to
                ask him. (Please this is a massive project).</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
