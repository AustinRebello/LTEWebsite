                <th scope="col">Management</th>
                </tr>
            </thead>
            <tbody>
                <% @senates.each do |u| %>
                    <tr>
                    <th scope="row"><%= u.id %></th>
                        <td><%= u.date %></td>
                        <td><%= u.state %></td>
                        <td><%= link_to "Manage Race", edit_senate_path(u) %></td>
                    </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
    <div class='tab-pane container fade' id='s4'>
        <div class="container">
            <h1 class="center text-white">House Race Management</h1>
