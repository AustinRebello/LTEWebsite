
<div class="schedules-area pd-top-110 pt-5">
    <div class="container">
        <div class="evt-tab-inner text-center">
            <ul class="nav nav-tabs" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="ex1-tab-1" data-toggle="pill" role="tab" aria-selected="true" href='#s1'><span>President</span></a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="ex1-tab-2" data-toggle="pill" role="tab" aria-selected="false" href='#s2'><span>Governor</span></a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="ex1-tab-3" data-toggle="pill" role="tab" aria-selected="false" href='#s3'><span>Senate</span></a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="ex1-tab-4" data-toggle="pill" role="tab" aria-selected="false" href='#s4'><span>House</span></a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="ex1-tab-5" data-toggle="pill" role="tab" aria-selected="false" href='#s5'><span>Miscellaneous</span></a>
                </li>
            </ul>
        </div>
    </div>
</div>

 <!-- Tab panes -->
    <div class="tab-content">
     <div class='tab-pane container fade in show active' id='s1'>
        <div class="container">
            <h1 class="center text-white">Presidential Race Management</h1>
            <table class="table adminTables" id = "presidentTable">
            <thead>
                <tr>
                <th scope="col">Date</th>
                <th scope="col">State</th>
                <th scope="col">Management</th>
                </tr>
            </thead>
            <tbody>
                <% @presidents.each do |p| %>
                    <tr>
                        <td><%= p.date %></td>
                        <td><%= p.state %></td>
                        <td><%= link_to "Manage Race", edit_president_path(p) %></td>
                    </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
    <div class='tab-pane container fade' id='s2'>
        <div class="container">
            <h1 class="center text-white">Gubernatorial Race Management</h1>
            <table class="table adminTables" id = "governorTable">
            <thead>
                <tr>
                <th scope="col">Date</th>
                <th scope="col">State</th>
                <th scope="col">Management</th>
                </tr>
            </thead>
            <tbody>
                <% @governors.each do |u| %>
                    <tr>
                    <th scope="row"><%= u.id %></th>
                        <td><%= u.date %></td>
                        <td><%= u.state %></td>
                        <td><%= link_to "Manage Race", edit_governor_path(u) %></td>
                    </tr>
                <% end %>
            </tbody>
            </table>
        </div>        
    </div>
