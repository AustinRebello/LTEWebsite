                <th scope="col">Management</th>
                </tr>
            </thead>
            <tbody>
                <% @houses.each do |u| %>
                    <tr>
                    <th scope="row"><%= u.id %></th>
                        <td><%= u.date %></td>
                        <td><%= u.state %></td>
                        <td><%= u.seat %></td>
                        <td><%= link_to "Manage Race", edit_house_path(u) %></td>
                    </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
    <div class='tab-pane container fade' id='s5'>
        <div class="container">
            <h1 class="center text-white">Miscellaneous Race Management</h1>
            <table class="table adminTables" id = "miscTable">
            <thead>
                <tr>
                <th scope="col">Date</th>
